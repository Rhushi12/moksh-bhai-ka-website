{
  "diamondUploadSchema": {
    "type": "object",
    "required": ["name", "shape", "carat", "clarity", "cut", "color", "price", "image"],
    "properties": {
      "name": {
        "type": "string",
        "description": "Diamond name or identifier",
        "example": "Crescent Cut Diamond"
      },
      "shape": {
        "type": "string",
        "enum": ["Round", "Princess", "Marquise", "Emerald", "Pear", "Oval", "Heart", "Radiant", "Asscher", "Cushion", "Crescent", "Custom", "Alphabet"],
        "description": "Diamond shape/cut type"
      },
      "category": {
        "type": "string",
        "enum": ["Rough Diamonds", "Polished Diamonds", "Colored Diamonds", "Certified Diamonds", "Investment Diamonds"],
        "description": "Diamond category",
        "default": "Investment Diamonds"
      },
      "carat": {
        "type": "number",
        "minimum": 0.01,
        "maximum": 100,
        "description": "Diamond carat weight"
      },
      "clarity": {
        "type": "string",
        "enum": ["FL", "IF", "VVS1", "VVS2", "VS1", "VS2", "SI1", "SI2", "I1", "I2", "I3"],
        "description": "Diamond clarity grade"
      },
      "cut": {
        "type": "string",
        "enum": ["Excellent", "Very Good", "Good", "Fair", "Poor", "Ideal"],
        "description": "Diamond cut quality"
      },
      "color": {
        "type": "string",
        "description": "Diamond color grade (D-Z or Fancy colors)",
        "examples": ["D", "E", "F", "G", "H", "I", "J", "K", "Fancy Yellow", "Fancy Pink", "Fancy Blue"]
      },
      "price": {
        "type": "string",
        "pattern": "^\\$[0-9,]+$",
        "description": "Diamond price in USD format",
        "example": "$25,000"
      },
      "description": {
        "type": "string",
        "maxLength": 500,
        "description": "Diamond description for website display"
      },
      "image": {
        "type": "string",
        "description": "Image file path or URL",
        "example": "/src/assets/diamond-crescent.jpg"
      },
      "bestseller": {
        "type": "boolean",
        "default": false,
        "description": "Whether this diamond is marked as a bestseller"
      },
      "uploadedBy": {
        "type": "string",
        "enum": ["app", "manual"],
        "default": "app",
        "description": "Source of the upload"
      },
      "uploadedAt": {
        "type": "string",
        "format": "date-time",
        "description": "Timestamp when diamond was uploaded"
      }
    }
  },
  "uploadAppConfig": {
    "supportedImageFormats": ["jpg", "jpeg", "png", "webp"],
    "maxImageSize": "5MB",
    "requiredFields": ["name", "shape", "carat", "clarity", "cut", "color", "price", "image"],
    "optionalFields": ["description", "bestseller", "category"],
    "autoGeneratedFields": ["id", "uploadedAt", "uploadedBy"]
  }
} 